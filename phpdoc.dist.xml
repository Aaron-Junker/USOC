<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="https://docs.phpdoc.org/latest/phpdoc.xsd"
>
    <title>USOC - Useful simple open source CMS</title>
    <paths>
        <output>docs/api</output>
        <cache>docs/.phpdoc/cache</cache>
    </paths>
    <version number="latest">
        <api>
            <output>api</output>
            <source dsn=".">
                <path>.</path>
            </source>
            <ignore hidden="true" symlinks="true">
                <!--1 or more repetitions:-->
                <path>vendor/**/*</path>
                <path>.github/**/*</path>
                <path>.git/**/*</path>
            </ignore>
        </api>
        <guide>
            <output>guide</output>
            <source dsn=".">
                <path>docs</path>
            </source>
            <output>guide</output>
            <ignore hidden="true" symlinks="true">
                <!--1 or more repetitions:-->
                <path>docs/api/**/*</path>
                <cache>docs/.phpdoc/cache/**/*</cache>
            </ignore>
        </guide>
    </version>
</phpdocumentor>
